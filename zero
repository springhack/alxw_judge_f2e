#!/bin/bash

NAME=$1

if [ $# == 0 ];
then
    read NAME;
fi

echo "Make dir $NAME ..."
mkdir -p $NAME/src
echo 'Maked !'

echo 'Copy files...'
cp -rvf Template/* $NAME/
echo 'Copied !'

echo 'Default files ...'
touch $NAME/src/index.js
echo 'Maked up !'

echo 'Install scripts ...'
cd $NAME
cnpm install
echo 'Installed !'

echo 'Finished !'
